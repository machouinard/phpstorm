<templateSet group="user">
  <template name="plgh" value="/**&#10; * Plugin Name: $PluginName$&#10; * Plugin URI:  $PluginURI$&#10; * Description: $PluginDescription$&#10; * Version: 1.0.0&#10; * Author: Mark Chouinard&#10; * Author URI: https://chouinard.me&#10; * Text Domain: $PluginTextDomain$&#10; * License: GNU General Public License v2 or later&#10; * License URI: http://www.gnu.org/licenses/gpl-2.0.html&#10; */" description="Plugin file header" toReformat="true" toShortenFQNames="true">
    <variable name="PluginName" expression="" defaultValue="Plugin Name" alwaysStopAt="true" />
    <variable name="PluginURI" expression="" defaultValue="https://wp.chouinard.me/$END$" alwaysStopAt="true" />
    <variable name="PluginDescription" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="PluginTextDomain" expression="lowercaseAndDash(PluginFuckingName)" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="PHP Expression" value="true" />
      <option name="PHP Statement" value="true" />
    </context>
  </template>
  <template name="todo" value="// TODO: $DATE$: $END$" description="Todo with date" toReformat="true" toShortenFQNames="true">
    <variable name="DATE" expression="date()" defaultValue="" alwaysStopAt="false" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="try" value="try {&#10;    $SELECTION$&#10;} catch ($TYPE$ $$$VARIABLENAME$) {&#10;    Logger::log($$$VARIABLENAME$);&#10;    $END$&#10;}" toReformat="true" toShortenFQNames="true">
    <variable name="TYPE" expression="complete()" defaultValue="Exception" alwaysStopAt="false" />
    <variable name="VARIABLENAME" expression="complete()" defaultValue="exc" alwaysStopAt="false" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
</templateSet>